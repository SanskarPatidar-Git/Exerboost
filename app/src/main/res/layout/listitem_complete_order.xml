<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/completeorder_imageView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/card_view_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/headingCompleteOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="The Macdonalds"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@id/completeorder_imageView"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/subHeadingCompleteOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Classic Cheeseburgerburger"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@id/completeorder_imageView"
            app:layout_constraintTop_toBottomOf="@+id/headingCompleteOrder"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$ 2500"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@id/completeorder_imageView"
            app:layout_constraintTop_toBottomOf="@+id/subHeadingCompleteOrder"/>
<com.google.android.material.button.MaterialButton
    android:layout_width="@dimen/_30sdp"
    android:layout_height="@dimen/_30sdp"
    app:layout_constraintStart_toEndOf="@+id/subHeadingCompleteOrder"
    app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>