<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/completeorder_imageView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/card_view_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/headingCompleteOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="The Macdonalds"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintBottom_toTopOf="@+id/subHeadingCompleteOrder"
            app:layout_constraintStart_toEndOf="@id/completeorder_imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subHeadingCompleteOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Classic Cheeseburgerburger"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toTopOf="@+id/priceTextView"
            app:layout_constraintStart_toEndOf="@id/completeorder_imageView"
            app:layout_constraintTop_toBottomOf="@+id/headingCompleteOrder" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rs.2500"
            android:textColor="@color/redtomato"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/completeorder_imageView"
            app:layout_constraintTop_toBottomOf="@+id/subHeadingCompleteOrder" />

        <RelativeLayout
            android:id="@+id/editRemoveLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/orderAgainTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/subHeadingCompleteOrder"
            app:layout_constraintTop_toBottomOf="@+id/headingCompleteOrder">

            <Button
                android:id="@+id/removeBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:background="@drawable/custom_btn_remove"
                android:backgroundTint="#C5BCBC" />

            <EditText
                android:id="@+id/itemQuanEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:inputType="number"
                android:minEms="1"
                android:text="1"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/addBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/custom_btn_add"
                android:backgroundTint="#C5BCBC" />
        </RelativeLayout>

        <TextView
            android:id="@+id/orderAgainTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/order_again"
            android:textColor="@color/redtomato"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="@+id/priceTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRemoveLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>