<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/cancelImageView"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:src="@drawable/cancel_img"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/personImageView"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/person_cartoon_img"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/cancelImageView" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/dmsans_bold"
        android:text="Maria Desouza"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/personImageView" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mariadesouza1345@gmail.com"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/dmsans_regular"
        app:layout_constraintEnd_toEndOf="@+id/nameTextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />


    <LinearLayout
        android:id="@+id/MyProfileLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/nav_my_profile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/dmsans_medium"
            android:textColor="@color/black"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/paymentMethodLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/MyProfileLayout"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/nav_payment_method" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/dmsans_medium"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/paymentMethodLayout"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/nav_settings" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/dmsans_medium"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/helpLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/settingsLayout"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/nav_help_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/dmsans_medium"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/privacyPolicyLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/helpLayout"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/privacy_policy_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/dmsans_medium"
            android:textColor="@color/black"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Log Out"
        android:letterSpacing="0"
        android:textAllCaps="false"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="@dimen/_12sdp"
        android:fontFamily="@font/dmsans_bold"
        app:layout_constraintStart_toStartOf="@+id/guideline_start_vertical"
        app:layout_constraintTop_toBottomOf="@+id/privacyPolicyLayout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_16sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>